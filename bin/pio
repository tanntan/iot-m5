#!/usr/bin/python3
# -*- coding: utf-8 -*-
import re
import sys
import os
from pathlib import Path
import shutil
import glob
import time

DIR = Path(__file__).parent.resolve()

proDir = Path().parent.resolve()
sys.path.append(str(proDir)+'/bin/iot/.platformio')

from platformio.__main__ import main
